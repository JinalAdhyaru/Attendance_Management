<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <title>Faculty Page</title>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
        
        <style>
            body { background-color: #E4E9FD; background-image: -webkit-linear-gradient(65deg, #A683E3 50%, #E4E9FD 50%);
                    margin-top: 20px; position: fixed; font-family: 'Roboto', sans-serif; }      
            input,p { border: 0ch; background-color: rgb(0,0,0,0); font-size: 35px; font-weight: 500; width: 500px; }
            fieldset { width:450px; padding:20px; margin-top:80px; margin-left:540px; border-radius:5px; 
                       box-shadow:2px 2px 20px 1px black; background-color:rgb(0,0,0,0.5); color: white; }            
            legend { padding: 3px 6px; color: white; font-size: 25px; text-align: center;  }
            form { margin-top: 30px; }
            select { margin: 6px;margin-left: 100px; margin-bottom: 20px; font-size: 18px;  }
            option {margin-bottom: 10px;}
            header { margin-top: 20px; margin-left: 422px; }
            .top { margin-left: 600px; }   
            .form-control { width: 400px; } 
            button {margin: 10px; }
            .row {margin-left: 50px;}
       </style>
    </head>

    <body>
        <header>
            <div class="row">
               <h1>Attendance Management System</h1>
               <a class="btn btn-primary" style=" margin-left: 350px; padding: -2%; height: 40px; margin-top: -25px;" href="/logout" role="button">Log Out</a>
            </div>    
        </header>
        <div class="form-group">
            <form method="POST">
                    <div class="top"><p>Welcome <%= facname[0].fname %> </p> </div>
                    <fieldset>
                        <legend>Select the course.</legend>
                    <select name="choosesubject">
                        <% courses.forEach(function (course) { %>
                            <option value="<%= course.cname %>"><%= course.cname %></option>
                        <%   });  %>
                    </select>
                    <div class="row">
                        <button type="submit" formaction="addattendance" class="btn btn-primary">Add Attendance</button>
                        <button type="submit" class="btn btn-primary" formaction="viewattendance">View Attendance</button>
                    </div>
                </fieldset>
            </form>
        </div>    
   </body>
</html>