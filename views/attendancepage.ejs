<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>Attendance Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body {           
            background-color: #E4E9FD;
            background-image: -webkit-linear-gradient(65deg, #A683E3 50%, #E4E9FD 50%);
            margin-left: 20px;
            position: fixed;
            font-family: 'Roboto', sans-serif;
        }  
        .row {  margin-left: 410px; font-size: 18px; font-weight: 500;margin-top: 53px; margin-bottom: 45px; }   
        header { margin-top: 20px; margin-left: 500px; margin-bottom: 30px; }  
        table, td, th {
            margin-top: 20px;
            border: 1px solid black;
            text-align: center;
            margin-left: 423px;
            height: 35px;
            padding: 8px;
        }
        table {
            border-collapse: collapse;
            width: 50%;
        }
        th {
            background-color: rgb(0,0,0,0.7);
            color: white;
        }
        td { height: 30px; }
        tr:nth-child(even) {background-color: #f2f2f296;}
        tr:nth-child(odd) {background-color: rgba(245, 245, 245, 0.842)}
        button { margin-left: 750px; margin-top: 5px;}
        input,p {
                    border: 0ch;
                    background-color: rgb(0,0,0,0);               
                    font-weight: 500;
        }
        span { margin-left: -150px;  }
        .sid { margin-left: 124px;}
        th.attendance {  width: 238px; }
    </style>
</head>

<body>
    <header>
        <h1>Attendance Management System</h1>
        <a class="btn btn-primary btn-lg" style="margin-left: 900px;  height: 43px; margin-top: -48px;"   href="/logout" role="button">Log Out</a>  
    </header>
    <form action="addingattendance" method="POST">
            <div class="row">
                Course ID: <input name="cid" value=" <%= data[0].cid %>" readonly>&nbsp;&nbsp;
               <span>Course Name: <%= data[0].cname %> </span> &nbsp; &nbsp;
               Faculty ID: <input name="fid" value=" <%= data[0].fid %>" readonly> 
               <span>Faculty Name: <%= data[0].fname %> </span>
            </div>           
            <table>
                <tr>
                    <th>Student ID</th>
                    <th class="attendance">Attendance</th>
                </tr>               
                <% data.forEach(function (student) { %>
                    <tr>
                        <td><input class="sid" name="sid" value="<%= student.sid %>" readonly></td>
                         <td>
                             <select  id="<%= student.sid %>" name="markattendance">
                                <option value="0">0</option>
                                <option value="1">1</option>
                            </select>
                        </td>
                    </tr>
                    <% }) %>
            </table>
           <br> 
            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </form>      
    </div>
</body>
</html>